#!/bin/bash

screwy_files=(
	 etc/bash.bash_logout
	 etc/default/useradd
	 etc/screenrc
	 etc/ssh/ssh_config
)

dangerous_files=(
	 etc/ssh/sshd_config
)

post_install() {
	 for F in ${screwy_files[@]}; do
		  echo SCREWY: $F
#		  [ -a "$F" ] && mv -i "$F" "$F.orig."$(date +%s)
	 done
	 for F in ${dangerous_files[@]}; do
		  echo DANGEROUS: $F
	 done
}

post_upgrade() {
	 post_install "$@"
}
