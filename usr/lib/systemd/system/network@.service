[Unit]
Description=Static Network
Wants=network.target
Before=network.target
BindsTo=sys-subsystem-net-devices-%i.device
After=sys-subsystem-net-devices-%i.device
Conflicts=dhcpcd@%i.service
ConditionPathExists=/etc/conf.d/network.%i

[Service]
Type=oneshot
RemainAfterExit=yes
EnvironmentFile=/etc/conf.d/network.%i
ExecStart=/sbin/ip link set dev %i up
ExecStart=/sbin/ip addr add ${address}/${netmask} broadcast ${broadcast} dev %i
ExecStart=/sbin/ip route add default via ${gateway}
ExecStart=/bin/bash -c "echo $'# Set by systemd network@%i.service\n${resolv}' >| /etc/resolv.conf"

ExecStop=/bin/bash -c "echo '# %i went down' >| /etc/resolv.conf"
ExecStop=/sbin/ip addr flush dev %i
ExecStop=/sbin/ip link set dev %i down

[Install]
WantedBy=network.target
