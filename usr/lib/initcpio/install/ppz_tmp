build () {
	 add_module btrfs
	 add_module dm-crypt
	 add_module dm-mod
	 add_module dm-snapshot
	 add_module fuse
	 add_binary /usr/bin/bash
	 add_binary /usr/bin/date
	 add_binary /usr/bin/pstree
	 add_binary /usr/bin/cat
	 add_binary /usr/bin/head
	 add_file /etc/hostname
}

help () {
	 cat <<-EOF
		This adds some extra things to initrd just in case
		EOF
}
