#!/usr/bin/bash

rando_oneword() {
   word=$(aspell -d en dump master | aspell -l en munch-list single \
           | aspell -l en expand | awk '{print $1}'\
           | sort -Rs | head -n 1)
	echo ${word,,}
}

rando_manypws() {
   export COLUMNS=$(tput cols)
   rand=${1:-80}
   while let rand--; do
      random_password 25 31
   done | column
}

rando_manywords() {
   echo $(aspell -d en dump master | aspell -l en expand \
      | sort -Ru | head -n 150)
}

hexchars=0123456789abcdef
rando_hex() {
	 echo -n ${hexchars:$(( RANDOM % 16 )):1}
}
rando_mac() {
	 local c=6
	 while let c--; do
		  rando_hex
		  rando_hex
		  (( c )) && echo -n : || echo
	 done
}
rando_manymacs() {
    export COLUMNS=$(tput cols)
    macs=${1:-15}
    while let macs--; do
        rando_mac
    done | column
}

functions=()
for arg; do
	 functions+=$arg
done

(( ${#functions[@]} )) || functions=(manypws manymacs manywords)

for f in "${functions[@]}"; do
	 if [ "$(type -t "rando_$f" 2>/dev/null)" = function ]; then
		  "rando_$f"
	 fi
done
